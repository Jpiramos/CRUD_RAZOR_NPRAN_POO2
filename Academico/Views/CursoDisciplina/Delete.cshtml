@model Academico.Models.CursoDisciplina

@{
    ViewData["Title"] = "Delete Curso";
}

<h1>Delete CursoDisciplina</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>CursoDisciplina</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Disciplina
        </dt>
        <dd class="col-sm-10">
            @Model.Disciplina.Nome
        </dd>
        <dt class="col-sm-2">
            Curso
        </dt>
        <dd class="col-sm-10">
            @Model.Curso.Nome
        </dd>
        <dt class="col-sm-2">
            Carga Horária
        </dt>
        <dd class="col-sm-10">
            @Model.CargaHoraria
        </dd>
    </dl>

</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="DisciplinaId" />
    <input type="hidden" asp-for="CursoId" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index">Back to List</a>
</form>
